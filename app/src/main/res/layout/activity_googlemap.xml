<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

 <fragment
     android:id="@+id/googleMap"
     android:name="com.google.android.gms.maps.SupportMapFragment"
     android:layout_width="match_parent"
     android:layout_margin="10dp"
     android:layout_height="200dp"
     app:layout_constraintRight_toRightOf="parent"
     app:layout_constraintTop_toTopOf="parent" />
 <TextView
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
  android:id="@+id/tvFirstNameOfUser"
  android:hint="Getting Your First Name..."
     android:gravity="center"
     android:layout_margin="10dp"
     android:textSize="25sp"
  app:layout_constraintTop_toTopOf="parent"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintRight_toRightOf="parent"></TextView>
 <TextView
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:id="@+id/tvSecondNameOfUser"
     android:textSize="25sp"
     android:gravity="center"
     android:hint="Getting Your Second Name..."
     android:layout_margin="10dp"
     app:layout_constraintTop_toBottomOf="@+id/tvFirstNameOfUser"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintRight_toRightOf="parent"></TextView>
 <TextView
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:id="@+id/tvPasswordOfUser"
     android:gravity="center"
     android:hint="Getting Your Password..."
     android:textSize="25sp"
     android:layout_margin="10dp"
     app:layout_constraintTop_toBottomOf="@+id/tvSecondNameOfUser"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintRight_toRightOf="parent"></TextView>
 <TextView
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:id="@+id/tvGenderOfUser"
     android:gravity="center"
     android:hint="Getting Your Gender..."
     android:textSize="25sp"
     android:layout_margin="10dp"
     app:layout_constraintTop_toBottomOf="@+id/tvPasswordOfUser"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintRight_toRightOf="parent"></TextView>
 <TextView
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:id="@+id/tvUserNameOfUser"
     android:gravity="center"
     android:hint="Getting Your User Number..."
     android:textSize="25sp"
     android:layout_margin="10dp"
     app:layout_constraintTop_toBottomOf="@+id/tvGenderOfUser"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintRight_toRightOf="parent"></TextView>
 <TextView
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:id="@+id/tvPhoneNumberOfUser"
     android:gravity="center"
     android:hint="Getting Your Phone Number..."
     android:textSize="25sp"
     android:layout_margin="10dp"
     app:layout_constraintTop_toBottomOf="@+id/tvUserNameOfUser"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintRight_toRightOf="parent"></TextView>
</androidx.constraintlayout.widget.ConstraintLayout>